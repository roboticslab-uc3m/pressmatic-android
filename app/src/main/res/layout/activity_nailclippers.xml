<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#f4fbff">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollview">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="38dp">

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_settings_black_24dp"
                    android:id="@+id/imageButton3"
                    android:background="@android:color/transparent"
                    android:contentDescription="gear button" />

                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:srcCompat="@android:drawable/ic_menu_help"
                    android:id="@+id/imageButton2"
                    android:background="@android:color/transparent"
                    android:tint="@android:color/black"
                    android:scaleType="fitEnd" />

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="@string/nailclippers"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView3"
                    tools:text="@string/nailclippers"
                    android:textSize="24sp"
                    android:textColor="@android:color/background_dark"
                    android:layout_weight="101.29"
                    android:textAlignment="center" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="101.29"
                    android:layout_marginTop="20dp">

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@android:drawable/ic_media_play"
                        android:id="@+id/imageButton"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:tint="@android:color/holo_orange_dark"
                        android:cropToPadding="false"
                        android:adjustViewBounds="true"
                        android:rotation="180"
                        android:elevation="0dp"
                        android:scaleType="fitXY"
                        android:paddingTop="100dp"
                        android:paddingBottom="100dp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/nail_clippers"
                        android:id="@+id/imageView"
                        android:contentDescription="@string/nailclippers"
                        android:cropToPadding="true"
                        android:layout_weight="1" />

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@android:drawable/ic_media_play"
                        android:id="@+id/imageButton1"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:tint="@android:color/holo_orange_dark"
                        android:adjustViewBounds="true"
                        android:cropToPadding="false"
                        android:scaleType="fitXY"
                        android:paddingBottom="100dp"
                        android:paddingTop="100dp" />

                </LinearLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentBottom="true">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <Button
                            android:textColor="#fff"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:id="@+id/Button5"
                            android:background="@android:drawable/ic_menu_help" />

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center">


                            <Button
                                android:text="@string/select_button"
                                android:layout_height="wrap_content"
                                android:id="@+id/button5"
                                android:background="@color/colorPrimary"
                                android:textSize="20sp"
                                android:layout_width="150dp" />

                        </LinearLayout>

                        <ImageButton
                            android:layout_width="match_parent"
                            android:layout_height="49dp"
                            app:srcCompat="@android:drawable/ic_btn_speak_now"
                            android:id="@+id/speak"
                            android:background="@android:color/transparent"
                            android:contentDescription="speak"
                            android:layout_marginTop="20dp" />

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_marginTop="10dp"
                        android:layout_height="30dp"
                        android:gravity="center">

                        <ImageView
                            android:layout_height="match_parent"
                            app:srcCompat="@android:drawable/radiobutton_off_background"
                            android:id="@+id/imageView6"
                            android:adjustViewBounds="false"
                            android:cropToPadding="false"
                            android:scaleType="fitXY"
                            android:layout_width="30dp" />

                        <ImageView
                            android:layout_height="match_parent"
                            app:srcCompat="@android:drawable/radiobutton_off_background"
                            android:id="@+id/imageView8"
                            android:adjustViewBounds="false"
                            android:scaleType="fitXY"
                            android:layout_marginLeft="40dp"
                            android:layout_width="30dp" />

                        <ImageView
                            android:layout_height="match_parent"
                            app:srcCompat="@android:drawable/radiobutton_off_background"
                            android:id="@+id/imageView7"
                            android:adjustViewBounds="false"
                            android:scaleType="fitXY"
                            android:layout_marginLeft="40dp"
                            android:tint="@color/colorPrimaryDark"
                            android:layout_width="30dp" />

                    </LinearLayout>
                    </LinearLayout>

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/commands"
            android:gravity="bottom"
            android:background="#f4fbff"
            android:visibility="invisible">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:elevation="1dp"
                android:background="@color/colorPrimaryDark">

                <TextView
                    android:text="@string/commands"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView8"
                    android:textColor="@android:color/white"
                    android:textSize="24sp"
                    android:textStyle="normal|bold" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="right">

                <TextView
                    android:text="@string/select"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView11"
                    android:textSize="20sp"
                    android:textColor="@color/colorPrimaryDark" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView9"
                    android:text="@string/select_description"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="20sp" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorPrimaryDark"
                android:gravity="right">

                <TextView
                    android:text="@string/Help"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView12"
                    android:textSize="20sp"
                    android:textColor="@android:color/white" />

                <TextView
                    android:text="@string/Help_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView10"
                    android:textSize="20sp"
                    android:textColor="@android:color/white" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="right">

                <TextView
                    android:text="@string/exit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView13"
                    android:textSize="20sp"
                    android:textColor="@color/colorPrimaryDark" />

                <TextView
                    android:text="@string/exit_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView14"
                    android:textSize="20sp"
                    android:textColor="@color/colorPrimaryDark" />
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorPrimaryDark"
                android:gravity="right">

                <TextView
                    android:text="@string/Language"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView15"
                    android:textSize="20sp"
                    android:textColor="@android:color/white" />

                <TextView
                    android:text="@string/Language_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView16"
                    android:textSize="20sp"
                    android:textColor="@android:color/white" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="right">

                <TextView
                    android:text="@string/right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView17"
                    android:textSize="20sp"
                    android:textColor="@color/colorPrimaryDark" />

                <TextView
                    android:text="@string/right_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView18"
                    android:textSize="20sp"
                    android:textColor="@color/colorPrimaryDark" />
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorPrimaryDark"
                android:gravity="right">

                <TextView
                    android:text="@string/left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView19"
                    android:textSize="20sp"
                    android:textColor="@android:color/white" />

                <TextView
                    android:text="@string/left_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView20"
                    android:textSize="20sp"
                    android:textColor="@android:color/white" />
            </TableRow>
        </TableLayout>

    </RelativeLayout>
</RelativeLayout>
